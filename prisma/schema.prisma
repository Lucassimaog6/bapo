generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(sequence())
  email    String @unique
  password String
  messages Message[]
}

model Message {
  id      Int @id @default(sequence())
  content   String 
  createdAt DateTime @default(now())
  userId Int 
  user User @relation(fields: [userId], references: [id])
}
